{
	"name": "@burger-editor/local",
	"version": "4.0.0-alpha.1",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"bge": "./server/index.js"
	},
	"files": [
		"dist",
		"server"
	],
	"scripts": {
		"build": "run-p build:client build:server",
		"build:client": "vite build",
		"build:server": "tsc -p tsconfig.build.json",
		"prebuild": "tsc",
		"dev": "run-p dev:client dev:server",
		"dev:client": "vite build --watch",
		"dev:server": "DEV_MODE=true DEBUG=@bge:* tsx watch src/index.ts"
	},
	"dependencies": {
		"@burger-editor/blocks": "4.0.0-alpha.1",
		"@burger-editor/client": "4.0.0-alpha.1",
		"@hono/node-server": "1.14.0",
		"@hono/zod-validator": "0.4.3",
		"ansi-colors": "4.1.3",
		"cosmiconfig": "9.0.0",
		"debug": "4.4.0",
		"hono": "4.7.5",
		"jsdom": "26.0.0",
		"open": "10.1.0",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@burger-editor/core": "4.0.0-alpha.1",
		"@types/debug": "4.1.12",
		"@types/jsdom": "21.1.7",
		"@types/node": "22.14.0",
		"dotenv": "16.4.7",
		"npm-run-all2": "7.0.2",
		"tsx": "4.19.3",
		"vite": "6.2.4"
	}
}
